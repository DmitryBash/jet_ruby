<%= form_tag orders_path, method: :post do %>
  <% @products.each do |key, value| %>
  <h3><%= key %></h3>
    <% value.each do |product| %>
      <p>
        <%= check_box_tag "product_ids[]", product.id, false, class: "#{key}" %>
        <%= product.name %>
        -
        <%= product.price %>
      </p>
    <% end %>
  <% end %>
  <%= submit_tag "Add" %>
<% end %>
